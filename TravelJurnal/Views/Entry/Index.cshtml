@model IEnumerable<TravelJurnal.Models.Entry>

<div class="text-center">
    <h1 class="display-4">Entries</h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Trip ID</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.EntryId</td>
                    <td>@entry.TripId</td>
                    <td>@entry.Description</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@entry.EntryId">Details</a> |
                        <a asp-action="Edit" asp-route-id="@entry.EntryId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@entry.EntryId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
